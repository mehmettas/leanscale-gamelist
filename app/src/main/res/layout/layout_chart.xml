<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/clOpinionsChart"
    android:layout_width="match_parent"
    app:layout_constraintStart_toStartOf="@id/guideStart"
    app:layout_constraintEnd_toEndOf="@id/guideEnd"
    app:layout_constraintTop_toBottomOf="@id/recyclerviewGenres"
    android:layout_height="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/imgGreen"
            android:background="@color/green"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight=".1"/>

        <LinearLayout
            android:id="@+id/imgSkip"
            android:background="@color/red"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/imgBlue"
            android:background="@color/blue"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:layout_width="0dp" />

        <LinearLayout
            android:id="@+id/imgOrange"
            android:background="@color/orange_detail"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:layout_width="0dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>